<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Utility.GeneratorFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@mipmap/ico_go_back" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/common_google_signin_btn_text_light_disabled"
            tools:ignore="MissingConstraints" />


    </RelativeLayout>

    <FrameLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/flGenerator"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvGenerator"
            android:layout_gravity="center"
            android:elevation="1dp"
            android:text="Generated QR Code will appear here"
            android:textAlignment="center"
            android:padding="4dp"
            android:textColor="@drawable/ic_person_black_24dp"
            />
        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:id="@+id/ivGenerator"
            android:background="@color/white"
            />
    </FrameLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/GenerateCodeBtn"
        android:text="Generate Code"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/flGenerator"
        />


</RelativeLayout>